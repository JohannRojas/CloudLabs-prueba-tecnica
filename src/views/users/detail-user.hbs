<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Detalle de {{user.usuario}}</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Nombre de usuario</label>
                <input type="text" name="usuario" class="form-control" value="{{user.usuario}}" disabled>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="nombre" class="form-control" value="{{user.nombre}}" disabled>
            </div>
            <div class="form-group">
                <label>Apellido</label>
                <input type="text" name="apellido" class="form-control" value="{{user.apellido}}" disabled>
            </div>
            <div class="form-group">
                <label>email</label>
                <input type="text" name="email" class="form-control" value="{{user.email}}" disabled>
            </div>

           

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#modalEliminarUsuario">
                Eliminar usuario
            </button>

            <!-- Modal -->
            <div class="modal fade" id="modalEliminarUsuario" tabindex="-1" aria-labelledby="modalLabelEliminarUsuario"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabelEliminarUsuario">Aviso!!</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Â¿Estas seguro de querer borrar este usuario?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <form action="/users/delete/{{ user._id }}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger ">Eliminar usuario</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>